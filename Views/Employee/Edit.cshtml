@model CRUD_MVC_TASK.Models.Employee

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Surname</label>
        <input type="text" asp-for="Surname" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <select asp-for="Gender" class="form-control">
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>

    <div class="form-group">
        <label>Department</label>
        <input type="text" asp-for="Department" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="email" asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
